{
    "name" : "bps",

    "version" : "2.0.1",

    "type" : "module",

    "description" : "A library and CLI tool for creating and applying BPS patches.",

    "author" : "Luke Phillips",

    "keywords" :
    [
        "binary",
        "patch",
        "rom"
    ],

    "homepage" : "https://github.com/lsphillips/bps",

    "bugs" :
    {
        "url" : "https://github.com/lsphillips/bps/issues"
    },

    "repository" :
    {
        "type" : "git",
        "url" : "https://github.com/lsphillips/bps.git"
    },

    "dependencies" :
    {
        "crc-32" : "1.2.2",
        "commander" : "14.0.0",
        "fs-extra" : "11.3.2"
    },

    "devDependencies" :
    {
        "eslint" : "9.35.0",
        "eslint-plugin-n" : "17.22.0",
        "eslint-config-protect-me-from-my-stupidity" : "15.1.0",
        "rollup" : "4.50.1",
        "@rollup/plugin-terser" : "0.4.4"
    },

    "main" : "bps.cjs",

    "exports" :
    {
        "node" :
        {
            "import" : "./bps.js",
            "require" : "./bps.cjs"
        },

        "default" : "./bps.js"
    },

    "files" :
    [
        "/README.md",
        "/CHANGELOG.md",
        "/LICENSE.txt",
        "/bps.js",
        "/bps.cjs",
        "/bps.cli.js",
        "/bps.d.ts"
    ],

    "bin" :
    {
        "bps" : "bps.cli.js"
    },

    "scripts" :
    {
        "test:lint" : "eslint \"**/*.js\"",
        "test:unit" : "node --test",
        "test" : "npm run test:lint && npm run test:unit",
        "build" : "rollup --config",
        "prepack" : "npm run test && npm run build"
    },

    "license" : "MIT",

    "engines" :
    {
        "node" : ">=18.0.0"
    },

    "types" : "bps.d.ts"
}
